var a=5,b :Int
let i,j,k :Int
b=a
for i in 1...a
{
for k in 1...i
  {
    print("*",terminator:" ")
  }
  for j in 1...b
  {
    print(" ",terminator:" ")
  }
  b=b-1
  print("\n")
}
b=a
for i in 1...a-1
{
  for j in 1...b-1
  {
    print("*",terminator:" ")
  }
  for k in 1...i
  {
    print(" ",terminator:" ")
  }
  
  b=b-1
  print("\n")
}
