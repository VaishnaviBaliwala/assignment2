var a=5,b :Int
let i,j,k :Int
b=1
for i in 1...a
{
  for j in 1...b
  {
    print(" ",terminator:" ")
  }
  for k in 1...2*(a-i+1)-1
  {
    print("*",terminator:" ")
  }
  b=b+1
  print("\n")
}
b=a
for i in 1...a
{
  for j in 1...b
  {
    print(" ",terminator:" ")
  }
  for k in 1...2*i-1
  {
    print("*",terminator:" ")
  }
  b=b-1
  print("\n")
}
